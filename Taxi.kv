<MainScreen>:
 #   BoxLayout:
#		orientation: "vertical"
#		Video:
#			source: "Bienvenidos a TaxiApp.mp4"
#			state:'play'
	GridLayout:
        canvas:
            #Color:
                #rgb: (0.93, 0.93, 0.93)
            Rectangle:
                pos: self.pos
                size: self.size
                source: "img/header.png"
        cols: 1
        size_hint: 1, .25
        pos_hint: {'x':0, 'y': .75}
        #top: root.top
	
    GridLayout:
        cols: 2
        size_hint: 1, .1
        pos_hint: {'x': 0, 'y': .65}
        Label:
            text:'Origen'
        Label:
            text:'Destino'
    GridLayout:
        cols: 2
        size_hint: 1, .1
        pos_hint: {'x': 0, 'y': .55}
        TextInput:
            id: origin
            text:''
            multiline: False
            focus: True
            write_tab: False
            size_hint: .2, .1
            #height: .5
            valign: 'middle'
        TextInput:
            id: destination
            text:''
            multiline: False
            focus: True
            write_tab: False
            size_hint: .2, .1
            #height:
            valign: 'middle'
    GridLayout:
        cols:1
        size_hint: .8, .2
        pos_hint: {'x': .10, 'y': .25}
        Button:
            id: search
            text: 'Calcular tarifa'
            size_hint: .2, .1
            height: 44
            valign: 'middle'
            on_release: root.showTarifa(origin.text,destination.text)
    GridLayout:
        cols:1
        size_hint: .4, .1
        pos_hint: {'x': .30, 'y': .12}
        Button:
            id: about
            text: 'About'
            size_hint: .1, .1
            height: 10
            valign: 'middle'
    GridLayout:
        canvas:
            Color:
                rgb: (.9,.7,.1)
                #rgb: (FF6E30)
            Rectangle:
                pos: self.pos
                size: self.size
                #source: "img/footer.png"
        cols: 1
        size_hint: 1, .10
        pos_hint: {'x':0, 'y': 0}
        Label:
            #halign:'left'
            color: 0,0,0,1
            text:'Calculos basados en tarifas ofrecidas por la ATTT.'
	
